
@{
    ViewData["Title"] = "Login";
}

<section>
    <!--form-->
    <div class="container-fluid" style="margin-bottom: 2%">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 ">
                <div class="login-form ">
                    <!--login form-->
                    <h2 class="col-sm-offset-5">Đăng Nhập</h2>
                    <form action="#">
                        <div class="mb-3">
                            <label class="form-label">Tên Đăng Nhập</label>
                            <input type="text" class="form-control" id="inputUsername">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="inputPassword">
                        </div>
                        <button type="submit" class="btn btn-default col-sm-offset-5">Đăng Nhập</button>
                        <div class="card-footer" style="margin-top:5%">
                            <div class="d-flex justify-content-center links col-sm-offset-4">
                                <label style="color:red;">Chưa có tài khoản?</label> <a href="~/Home/Signup"> Đăng kí</a>
                            </div>
                            <div class="d-flex justify-content-center links col-sm-offset-5">
                                <a href="~/Home/Forgetpasswork">Quên mật khẩu?</a>
                            </div>
                        </div>
                    </form>
                </div><!--/login form-->
            </div>

        </div>
    </div>
</section><!--/form-->
